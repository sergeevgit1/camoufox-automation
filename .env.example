# Порт приложения
PORT=6000

# Режим работы
NODE_ENV=production

# PocketBase URL (внутри Docker сети)
POCKETBASE_URL=http://pocketbase:8090

# Cookie secret для JWT (рекомендуется изменить в production)
# Сгенерируйте случайную строку длиной 32+ символа
COOKIE_SECRET=camoufox_automation_secret_key_change_in_production

# Опционально: AWS S3 для хранения файлов
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_bucket_name

# Опционально: OpenAI API для AI функций
# OPENAI_API_KEY=your_openai_api_key
